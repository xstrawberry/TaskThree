<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<FrameLayout
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</FrameLayout>
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">


           <RelativeLayout

               android:id="@+id/main_news"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
             <ImageView
                 android:id="@+id/news"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/newschange"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/news"
                    android:id="@+id/main_tv1"
                    android:text="新闻"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/main_movie"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/movie"

                   android:layout_centerHorizontal="true"
                   android:src="@drawable/movieschange"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_centerHorizontal="true"
                   android:layout_below="@+id/movie"
                   android:text="视频"
                   android:id="@+id/main_tv2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/main_save"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/save"

                   android:layout_centerHorizontal="true"
                   android:src="@drawable/saveschange"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:layout_centerHorizontal="true"
                   android:layout_below="@+id/save"
                   android:text="收藏"
                   android:id="@+id/main_tv3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/main_me"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/me"

                   android:layout_centerHorizontal="true"
                   android:src="@drawable/mechange"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:id="@+id/main_tv4"
                   android:layout_centerHorizontal="true"
                   android:layout_below="@+id/me"
                   android:text="我"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>


    </LinearLayout>
</LinearLayout>